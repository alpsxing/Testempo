<Window x:Class="Bumblebee.SerialPortConfiguration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置串口参数" Height="270" Width="200" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Loaded="Window_Loaded" Icon="/Bumblebee;component/Resources/serialportconfig.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.Column="0" Margin="0,1,0,1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="端   口"/>
        <Label Grid.Row="2" Grid.Column="0" Margin="0,1,0,1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="波特率"/>
        <Label Grid.Row="3" Grid.Column="0" Margin="0,1,0,1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="校验位"/>
        <Label Grid.Row="4" Grid.Column="0" Margin="0,1,0,1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="数据位"/>
        <Label Grid.Row="5" Grid.Column="0" Margin="0,1,0,1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="起始位"/>
        <Label Grid.Row="6" Grid.Column="0" Margin="0,1,0,1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="停止位"/>
        <Button Grid.Row="8" Grid.Column="0" Margin="0,2,-20,2" Width="75" Content="确认" Name="btnOK" Click="OK_Button_Click"/>
        <Button Grid.Row="8" Grid.Column="1" Margin="10,2,0,2" Width="75" Content="取消" IsCancel="True" IsDefault="True" Click="Cancel_Button_Click"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,2,2,2" Name="cboxSerialPort"
                  SelectedValue="{Binding Path=SelectedSerialPort,Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,2,2,2" Name="cboxBaud" SelectedIndex="0"
                  SelectedValue="{Binding Path=SelectedBaud,Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem Content="115200"/>
            <ComboBoxItem Content="57600"/>
            <ComboBoxItem Content="56000"/>
            <ComboBoxItem Content="43000"/>
            <ComboBoxItem Content="38400"/>
            <ComboBoxItem Content="19200"/>
            <ComboBoxItem Content="9600"/>
            <ComboBoxItem Content="4800"/>
            <ComboBoxItem Content="2400"/>
            <ComboBoxItem Content="1200"/>
            <ComboBoxItem Content="600"/>
            <ComboBoxItem Content="300"/>
        </ComboBox>
        <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,2,2,2" Name="cboxParity" SelectedIndex="0"
                  SelectedValue="{Binding Path=SelectedParity,Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem Content="Odd"/>
            <ComboBoxItem Content="Even"/>
            <ComboBoxItem Content="None"/>
        </ComboBox>
        <ComboBox Grid.Row="4" Grid.Column="1" Margin="0,2,2,2" Name="cboxDataBit" SelectedIndex="0"
                  SelectedValue="{Binding Path=SelectedDataBit,Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="5"/>
        </ComboBox>
        <ComboBox Grid.Row="5" Grid.Column="1" Margin="0,2,2,2" Name="cboxStartBit" SelectedIndex="0"
                  SelectedValue="{Binding Path=SelectedStartBit,Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem Content="1"/>
        </ComboBox>
        <ComboBox Grid.Row="6" Grid.Column="1" Margin="0,2,2,2" Name="cboxStopBit" SelectedIndex="0"
                  SelectedValue="{Binding Path=SelectedStopBit,Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="1.5"/>
            <ComboBoxItem Content="2"/>
        </ComboBox>
    </Grid>
</Window>
