<Window x:Class="ManagementSystem.OneLineSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Title" Height="100" Width="400" MaxHeight="100" MinHeight="100" MinWidth="400" MaxWidth="400"
        WindowStartupLocation="CenterScreen" Icon="/ManagementSystem;component/Resources/OneLineEditor.ico"
        FontFamily="Arial">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition Width="75"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Name="lblName" Grid.Row="0" Grid.Column="0" Margin="5,0,2,0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <ComboBox Name="cboxContent" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="2,0,5,0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <Button Name="btnOK" Grid.Row="1" Grid.Column="2" Margin="0,3,5,2" Content="OK" Click="OK_Button_Click"/>
        <Button Name="btnCancel" Grid.Row="1" Grid.Column="3" Margin="0,3,5,2" Content="Cancel" Click="Cancel_Button_Click" IsDefault="True" />
    </Grid>
</Window>
