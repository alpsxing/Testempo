<Window x:Class="EncryptDecrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Height="30">
            <Button DockPanel.Dock="Right" Content="OK" Width="75" Click="OK_Button_Click"/>
            <Button DockPanel.Dock="Right" Content="Create" Width="75" Click="Create_Button_Click"/>
            <Grid/>
        </DockPanel>
        <TextBox Name="txtResult" DockPanel.Dock="Bottom" IsReadOnly="True" Height="130" TextWrapping="Wrap"></TextBox>
        <TextBox Name="txtSource" DockPanel.Dock="Bottom" TextWrapping="Wrap"></TextBox>
    </DockPanel>
</Window>
